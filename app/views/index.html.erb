<div class="page-header">
  <h1>Movies</h1>
</div>

<table class="table table-hover">

  <thead>
    <tr>
      <th>Images</th>
      <th>Titles</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Director ID</th>

    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><img src="<%= movie.image_url %>"></td>
      <td><%=movie.title %> </td>
      <td><%= movie.year %></td>
      <td><%= movie.description %></td>
    </tr>

    <%end%>
  </tbody>
<%console%>
</table>
