<div class="page-header">
  <h1>Add Actor</h1>
</div>


<form class="form-horizontal" action="/create_actor" >


<div class="form-group">
  <label for="name" class="col-sm-2 control-label">Name</label>
<div class="col-sm-10">
  <input type="text" id= "name" name="name" Placeholder="Name" class="form-control">
</div>
</div>

<div class="form-group">
  <label for="dob" class="col-sm-2 control-label">Year</label>
<div class="col-sm-10">
  <input type="text" id= "dob" name="dob" Placeholder="DOB" class="form-control">
</div>
</div>

<div class="form-group">
  <label for="bio" class="col-sm-2 control-label">BIO</label>
<div class="col-sm-10">
  <input type="text" id= "bio" name="bio" Placeholder="BIO" class="form-control">
</div>
</div>


<div class="form-group">
  <label for="image_url" class="col-sm-2 control-label">Image</label>
<div class="col-sm-10">
  <input type="text" id= "image_url" name="image_url" Placeholder="Image url" class="form-control">
</div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <input type="submit" value="Create Actor" class="btn btn-primary">
  </div>
</div>


</form>
